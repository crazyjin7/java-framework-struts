<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="user" namespace="/user" extends="struts-default">
		<action name="init">
			<result>/resultsample/findMember.jsp</result>
		</action>

		<action name="find" class="kr.kosta.struts.resultsample.FindUserAction">
			<result name="init" type="redirectAction">init.action</result>
			<result name="noMember">/resultsample/noMember.jsp</result>
			<result>/resultsample/showMember.jsp</result>
		</action>
	</package>


	<!-- global-results 예제  -->
	<package name="globaluser" namespace="/globaluser" extends="struts-default">
		<global-results>
			<result name="noMember">/resultsample/noMember.jsp</result>
		</global-results>

		<action name="init">
			<result>/resultsample/findGlobelMember.jsp</result>
		</action>

		<action name="find" class="kr.kosta.struts.resultsample.FindUserAction">
			<result name="init" type="redirectAction">init.action</result>
			<result>/resultsample/showMember.jsp</result>
		</action>
	</package>

</struts>