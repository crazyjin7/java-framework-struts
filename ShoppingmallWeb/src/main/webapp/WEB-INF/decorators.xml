<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/common/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/noSitemesh/*</pattern>
        <pattern>/member/index.jsp</pattern>
    </excludes>


    <decorator name="mainLayout" page="mainLayout.jsp">
        <pattern>/member/*</pattern>
    </decorator>

    <decorator name="secondLayout" page="secondLayout.jsp">
        <pattern>/noneSitemesh/*</pattern>
    </decorator>

    <decorator name="secondLayout" page="thirdLayout.jsp">
        <pattern>/anotherSitemesh/*</pattern>
    </decorator>

</decorators>
